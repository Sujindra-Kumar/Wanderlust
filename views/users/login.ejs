<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h2 class="col-6 offset-3">Login on wanderlust</h2>
    <div class="col-6 offset-3">
        <form method="POST" action="/login" novalidate class="needs-validation">
            <div class="mb-3">
                <lebel for="username" class="form-lebel">Username</lebel>
                <input name="username" id="username" type="text" class="form-control" required>
                <div class="invalid-feedback">Please enter username.</div>
            </div>
            <div class="mb-3">
                <lebel for="password" class="form-lebel">Password</lebel>
                <input name="password"  id="password"  type="password"  class="form-control" required>
                <div class="invalid-feedback">Please enter password.</div>
            </div>
            <button class="btn btn-success">Login</button>
        </form>
    </div>
</div>